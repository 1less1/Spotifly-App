<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Spotifly" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:windowBackground">@drawable/gradient_background</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/spotifly_green_medium</item>
        <item name="colorPrimaryVariant">@color/spotifly_green_darker</item>
        <item name="colorOnPrimary">@color/darker_white</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">#88000000</item>
        <item name="android:windowTranslucentStatus">true</item>

        <!-- Fullscreen Mode -->
        <item name="android:windowFullscreen">false</item>

        <!-- Font -->
        <item name="android:fontFamily">@font/roboto_regular</item>

    </style>

    <style name="Theme.StartupActivity" parent="Theme.Spotifly">
        <item name="android:windowBackground">@drawable/gradient_background</item>
    </style>




    <!-- Theme for the Startup Splash Screen -->
    <style name="Theme.AnimatedSplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/spotifly_purple_medium</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/avd_spotifly_splash_new</item>
        <item name="windowSplashScreenAnimationDuration">3500</item>
        <item name="postSplashScreenTheme">@style/Theme.StartupActivity</item>
    </style>




</resources>