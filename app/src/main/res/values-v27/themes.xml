<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Spotifly" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:windowBackground">@drawable/gradient_background</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/spotifly_green_medium</item>
        <item name="colorPrimaryVariant">@color/spotifly_green_darker</item>
        <item name="colorOnPrimary">@color/darker_white</item>

        <!-- Secondary brand color.
        <item name="colorSecondary">@color/spotifly_purple_lighter</item>
        <item name="colorSecondaryVariant">@color/spotifly_purple</item>
        <item name="colorOnSecondary">@color/white</item> -->

        <!-- Customize your theme here. -->
        <!-- Status Bar -->
        <item name="android:statusBarColor">#88000000</item>
        <item name="android:windowTranslucentStatus">true</item>

        <!-- Fullscreen Mode - Fill in Notches -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>

    </style>


    <style name="Theme.StartupActivity" parent="Theme.Spotifly">
        <item name="android:windowBackground">@color/darker_white</item>
    </style>
</resources>